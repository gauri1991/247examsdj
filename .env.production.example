# Production Environment Configuration
# Copy this file to .env and update with your actual values

# IMPORTANT: Set DEBUG to False in production
DEBUG=False

# Generate a strong secret key for production
# You can use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-production-secret-key-here-change-this

# Allowed hosts - add your domain name(s)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgresql://dbuser:dbpassword@localhost:5432/exam_portal_db

# Redis Configuration (required for production)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0

# Email Configuration (configure with your SMTP provider)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Security Settings (enabled for production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# Logging Level
DJANGO_LOG_LEVEL=WARNING

# Security Level
SECURITY_LEVEL=high

# ============================================
# FEATURE FLAGS - PRODUCTION OPTIMIZATION
# ============================================
# Disable resource-intensive features for better performance
# Targeting 10,000+ concurrent users

# PDF Extractor - DISABLED in production (saves 17GB RAM + 6-14 CPU cores)
# Use separate server or process PDFs during off-peak hours
PDF_EXTRACTOR_ENABLED=false
PDF_UPLOAD_ALLOWED=false

# AI Grading - Keep disabled unless needed
AI_GRADING_ENABLED=false

# Advanced Analytics - Enabled for production insights
ADVANCED_ANALYTICS_ENABLED=true

# Payment System - Enable if using subscription/payment features
PAYMENT_SYSTEM_ENABLED=true

# Proctoring - Enable only if using exam proctoring
PROCTORING_ENABLED=false

# Bulk Operations - Keep enabled for admin efficiency
BULK_OPERATIONS_ENABLED=true

# Exam Templates - Keep enabled for quick exam creation
EXAM_TEMPLATES_ENABLED=true

# Collaborative Editing - Disable for production (experimental feature)
COLLABORATIVE_EDITING=false

# ============================================
# PERFORMANCE NOTES:
# ============================================
# With PDF_EXTRACTOR_ENABLED=false:
# - Concurrent user capacity: 16,000-20,000 (vs 12,000-15,000)
# - Response time improvement: +50% faster
# - Memory freed: ~17GB (53% of 32GB total)
# - CPU freed: 6-14 cores worth of processing
#
# See docs/PDF_EXTRACTOR_DISABLED_ANALYSIS.md for details
